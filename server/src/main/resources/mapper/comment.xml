	<select id="getCommentList" parameterType="int" resultType="CommentDto">
		select 
			commentNo, userId, content, registerTime
		from comment
		where articleNo = #{articleNo}
	</select>
	
	
	<insert id="writeComment" parameterType="ReqWriteCommentDto">
		insert into comment (articleNo, userId, content, registerTime)
		values (#{articleNo}, #{userId}, #{content}, now())
	</insert>
	
	<!--  void modify(ReqUpdateCommentDto comment) throws SQLException;-->
	
	<update id="modifyComment" parameterType="ReqUpdateCommentDto">
		update comment
		set content = #{content}
		where articleNo = #{articleNo} and commentNo = #{commentNo}
	</update>
	
	<delete id="deleteComment" parameterType="ReqDelCommentDto">
		delete from comment
		where  
			userId = #{userId}
			and articleNo = #{articleNo}
			and commentNo = #{commentNo}
	</delete> 
	
	
	
